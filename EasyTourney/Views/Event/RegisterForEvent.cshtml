@model EasyTourney.ViewModels.RegisterForEvent

@{
    ViewBag.Title = "RegisterForEvent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Are you sure you want to Register for this event</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-lg-5">
            <div class="row">
                @Html.LabelFor(model => model.selectedEvent.Name, htmlAttributes: new { @class = "control-label col-md-4" })

                <p> @Model.selectedEvent.Name</p>

            </div>
            <div class="row">
                @Html.LabelFor(model => model.selectedEvent.StarDate, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-5">
                    <p> @Model.selectedEvent.StarDate.ToString() </p>
                </div>
            </div>
            <div class="row">
                @Html.LabelFor(model => model.selectedEvent.Price, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-5">
                    <p> @Model.selectedEvent.Price </p>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Yes, Partcipate" class="btn btn-primary btn-lg" />
        </div>
    </div>
    @Html.HiddenFor(model => model.selectedEvent.GUID);
}



