@model EasyTourney.ViewModels.SaveEventMessageModel

@{
    ViewBag.Title = "_EventMessages";
}

@using (Html.BeginForm("saveEventMessages", "Event", Model))
{
    <div class="row">
        <div class="col-lg-5">
            <div class="row">
                @Html.LabelFor(model => model.message.Content, "Comment", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">

                    <p> @Html.EditorFor(model => model.message.Content)</p>

                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Send" class="btn btn-primary btn-lg" />
        </div>
    </div>

    @Html.HiddenFor(model => model.relatedEvent.GUID);
}